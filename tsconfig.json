{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es2020",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "incremental": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "paths": {
            "~scripts/*": ["scripts/*"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./tsfixes.d.ts"
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "private",
        "node_modules",
        "dist"
    ]
}
