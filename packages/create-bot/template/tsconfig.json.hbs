{{emit_if (and features.typescript (ne runtime "deno"))}}
{
    "compilerOptions": {
        "outDir": "./dist",
        {{#if (eq runtime "bun")}}
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        {{else}}
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        {{/if}}
        "target": "es2022",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "incremental": true,
        "skipLibCheck": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "**/node_modules",
    ]
}
