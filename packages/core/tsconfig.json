{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist"
    },
    "include": [
        "./src",
        "./tests",
        "./utils.ts",
    ],
    "typedocOptions": {
        "name": "@mtcute/core",
        "includeVersion": true,
        "out": "../../docs/packages/core",
        "validation": {
            "notExported": true,
            "invalidLink": true,
            "notDocumented": false
        },
        "excludePrivate": true,
        "entryPoints": [
            "./src/index.ts"
        ]
    }
}
